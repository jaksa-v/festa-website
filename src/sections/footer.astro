---
import { Image } from "astro:assets";
import Socials from "../components/socials.astro";
import AboveFooterSlideshow from "../components/AboveFooterSlideshow.astro";

import horizontalLogo from "../assets/festa-logo-horizontal.png";
import ContactButtonFooter from "@/components/modal/ContactButtonFooter.vue";
---

<div>
  {Astro.url.pathname === "/" && <AboveFooterSlideshow />}
  <div
    class="flex flex-col items-center gap-y-8 bg-black bg-[url('/src/assets/footer_desktop.png')] bg-cover bg-center bg-no-repeat py-10 md:py-16"
  >
    <h2
      class="text-center text-3xl text-white md:text-[90px] md:leading-[100px] md:font-light"
    >
      Like what you see?
    </h2>
    <ContactButtonFooter client:only="vue" />
    <div
      class="flex max-w-[1720px] flex-col gap-y-4 py-2 text-xl font-light text-white md:my-10 md:flex-row md:justify-around md:gap-x-20 md:gap-y-0 md:text-[50px] md:leading-[60px]"
    >
      <p>office@festa.live</p>
      <p>+382 69 123 321</p>
      <p>+382 67 987 789</p>
    </div>
    <Socials />
    <div>
      <a
        href=""
        target="_blank"
        class="hover:text-festa-500 text-center text-xl font-light text-white underline md:mt-14 md:text-2xl"
      >
        Download Fešta press pack
      </a>
    </div>
    <div class="text-center text-xs leading-5 text-white md:text-base">
      <p>Copyright © 2025 Fešta.</p>
      <p>All rights reserved.</p>
    </div>
    <Image
      class="h-5 w-[114px] md:h-8 md:w-[200px]"
      src={horizontalLogo}
      alt="horizontal logo"
    />
  </div>
</div>
