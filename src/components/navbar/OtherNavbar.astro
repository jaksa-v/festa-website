---
import arrowLeft from "../../assets/arrow-left-white.svg";
const currentPath = Astro.url.pathname;
---

<nav
  class={`z-50 flex w-full p-4 shadow-md md:py-12 ${currentPath.includes("/gallery") ? "bg-black" : ""}`}
>
  <div class="container mx-auto flex w-full justify-between">
    <a
      href="/"
      class="flex items-center gap-x-2 font-mono text-white md:gap-x-7 md:text-[50px] md:leading-[50px]"
    >
      <img src={arrowLeft.src} alt="Arrow Left" class="md:h-9" />
      BACK
    </a>
    {
      currentPath.includes("/our-work") && (
        <span class="block font-mono text-xl text-white md:text-[50px] md:leading-[50px]">
          /OUR WORK
        </span>
      )
    }
    {
      currentPath.includes("/gallery") && (
        <span class="block font-mono text-xl text-white md:text-[50px] md:leading-[50px]">
          /GALLERY
        </span>
      )
    }
  </div>
</nav>
