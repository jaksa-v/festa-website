---
import arrowLeft from "../../assets/arrow-left.svg";
const currentPath = Astro.url.pathname;
---

<nav
  class="fixed top-0 z-50 flex w-full justify-between bg-black p-4 shadow-md"
>
  <a
    href="/"
    class="text-festa-500 flex items-center gap-x-2 font-mono text-xl"
  >
    <img src={arrowLeft.src} alt="Arrow Left" />
    BACK
  </a>
  {
    currentPath.includes("/our-work") && (
      <span class="font-mono text-xl text-white">/OUR WORK</span>
    )
  }
  {
    currentPath.includes("/gallery") && (
      <span class="font-mono text-xl text-white">/GALLERY</span>
    )
  }
</nav>
